{% extends 'base.html.twig' %}

{% block title %}{{ apropo().siteName }} - {{ 'blog'|trans }}{% endblock %}

{% block body %}

<!-- Projects Start -->
<div class="container-xxl py-6 bg-white" id="project">
    <div class="container">
        <div class="row mb-5 align-items-center wow fadeInUp" data-wow-delay="0.1s">
            <div class="col-lg-12">
                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('accueil') }}">Accueil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'blog'|trans }}</li>
                    </ol>
                </nav>
                <h1 class="display-5 mb-0">{{ 'blog'|trans }}</h1>
            </div>
        </div>
        <div class="row g-4 wow fadeInUp" data-wow-delay="0.1s">
            {% for actualite in actualites %}
               {% include "blog/composants/_card.html.twig" %}
            {% else %}
            <div class="col-12">
                {% include "partials/base/_nodata.html.twig" %}
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- Projects End -->

{% endblock %}
