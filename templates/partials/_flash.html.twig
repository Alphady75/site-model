{% for type, messages in app.flashes %}
  {% for message in messages %}
    <div class="alert alert-{{ type }} alert-dismissible fade show p-3 rounded">
      <strong class="text-{{ type }} alert-title">
        {% if type == 'danger' %}
          Echec!
        {% elseif type == 'warning' %}
          Attention!
        {% elseif type == 'info' %}
          En cours de validation!
        {% elseif type == 'success' %}
          Succ√®s!
        {% endif %}
      </strong>
      {{ message }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {% endfor %}
{% endfor %}