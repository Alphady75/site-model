<!-- Footer Start -->
<div class="container-fluid bg-dark footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
	<div class="container py-5">
		<div class="row">
			<div class="col-lg-4 col-md-6">
				<h4 class="text-light mb-4">Addresse</h4>
				{% if apropo() != null %}
					<p>
						<i class="fa fa-map-marker-alt me-3"></i>
						{{ apropo().bureau }}
					</p>
					<p>
						<i class="fa fa-phone-alt me-3"></i>
						{{ apropo().telephone }}</p>
					<p>
						<i class="fa fa-envelope me-3"></i>
						{{ apropo().email }}</p>

				{% endif %}
			</div>
			<div class="col-lg-3 ms-auto col-md-6">
				<h4 class="text-light mb-4">Nos services</h4>
				{% for service in services() %}
				<a class="btn btn-link" href="{{ path('services_details', {slug: service.slug}) }}">{{ service }}</a>					
				{% endfor %}
			</div>
			<div class="col-lg-3 ms-auto col-md-6">
				<h4 class="text-light mb-4">Liens rapides</h4>
				<a class="btn btn-link" href="{{ path('accueil') }}">Accueil</a>
				<a class="btn btn-link" href="{{ path('apropos') }}">A propos</a>
				<a class="btn btn-link" href="{{ path('services') }}">Services</a>
				<a class="btn btn-link" href="{{ path('architectures') }}">Architecture</a>
				<a class="btn btn-link" href="{{ path('realisations') }}">Réalisations</a>
				<a class="btn btn-link" href="{{ path('contact') }}">Contact</a>
				<a class="btn btn-link" href="{{ path('app_login') }}">Connexion</a>
			</div>
			<div class="col-lg-2 col-md-6">
				<h4 class="text-light mb-4">Nous suivre</h4>
				<div class="d-flex pt-2">
					{% if apropo() != null %}
						{% for communaute in apropo().communautes %}
							<a class="btn btn-square btn-outline-primary me-1" href="{{ communaute.lien }}" target="_blank">
								<i class="fab fa-{{ communaute.icon }}"></i>
							</a>
						{% endfor %}
					{% endif %}
				</div>
			</div>
		</div>
	</div>
	<div class="container-fluid copyright">
		<div class="container">
			<div class="row">
				<div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
					&copy;
					<a href="#">{{ appName }}</a>, Tous droits réservés.
				</div>
				<div
					class="col-md-6 text-center text-md-end">
					Conçu par
					<a href="https://htmlcodex.com">{{ concepteur }}</a>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Footer End -->

<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
	<i class="bi bi-arrow-up"></i>
</a>
