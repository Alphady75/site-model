{% extends 'auth.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block titre %}Connexion
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecter en tant
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}
		<div class="input-group custom">
			<input type="email" value="{{ last_username }}" name="email" class="form-control form-control-lg" placeholder="Adresse e-mail" aria-describedby="emailHelp" autocomplete="false" required autofocus>
			<div class="input-group-append custom">
				<span class="input-group-text border-0 bg-transparent">
					<i class="icon-copy dw dw-user1"></i>
				</span>
			</div>
		</div>
		<div class="input-group custom">
			<input type="password" name="password" class="form-control form-control-lg focus" placeholder="**********">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="input-group-append custom">
				<span class="input-group-text border-0 bg-transparent">
					<i class="dw dw-padlock1"></i>
				</span>
			</div>
		</div>
		<div class="row pb-30 text-auth">
			<div class="col-6">
				<div class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input" id="customCheck1" name="_remember_me">
					<label class="custom-control-label" for="customCheck1">Rester connecter</label>
				</div>
			</div>
			<div class="col-6">
				<div class="forgot-password">
					<a href="{{ path('app_forgot_password_request') }}">
						Mot de passe oublié!
					</a>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12">
				<div class="form-group mb-0">
					<button type="submit" class="theme-btn btn-style-one w-100 button radius-btn">
						<span class="btn-title">
							<i class="fa fa-globe mr-2"></i>
							Connexion
						</span>
					</button>
				</div>

				<div class="pt-3 text-center">
					<a href="{{path('app_register')}}" class="btn">Créer un nouveau compte !</a>
				</div>
			</div>
		</div>
	</form>

{% endblock %}
