{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- architectures
{% endblock %}

{% block body %}
	<!-- Facts Start -->
	<div class="container my-5">
		<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="mb-4">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('accueil') }}">Accueil</a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Architectures</li>
			</ol>
		</nav>
		<div class="row align-items-end mb-5">
			<div class="col-lg-8 wow fadeInUp" data-wow-delay="0.1s">
				<div class="border-start border-5 border-primary ps-4">
					<h6 class="text-body text-uppercase mb-2">Architectures</h6>
					<h1 class="display-6 mb-0">
						Solutions de construction et de r√©novation
					</h1>
				</div>
			</div>
		</div>

		<div class="row">
			{% for architecture in architectures %}
				<div class="col-xl-4 col-lg-6 col-md-6 portfolio-item">

					{% if architecture.type == 'image' %}
						<div class="position-relative portfolio-box" style="border-radius: 10px;">
							<img class="img-fluid w-100" src="{% if architecture.image %}{{ vich_uploader_asset(architecture, 'imageFile' ) | imagine_filter('realisation') }}{% else %}{{ asset('img/img-def-min.png') | imagine_filter('realisation') }}{% endif %}" alt="{{ architecture }}">
							<a class="portfolio-btn" href="{% if architecture.image %}{{ vich_uploader_asset(architecture, 'imageFile' ) | imagine_filter('realisation') }}{% else %}{{ asset('img/img-def-min.png') | imagine_filter('realisation') }}{% endif %}" data-lightbox="portfolio">
								<i class="bi bi-plus text-white"></i>
							</a>
						</div>
					{% else %}

					<iframe width="100%" height="200px" style="border-radius: 10px;" src="https://www.youtube.com/embed/{{ architecture.videoId }}" title="{{ architecture }}" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

					{% endif %}

				</div>
			{% endfor %}

		</div>
	</div>
	<!-- Facts End -->
{% endblock %}
