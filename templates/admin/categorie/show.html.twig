{% extends 'admin.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ categorie.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ categorie.slug }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ categorie.created ? categorie.created|ago : '' }}</td>
            </tr>
            <tr>
                <th>Dernière mise à jour</th>
                <td>{{ categorie.updated ? categorie.updated|ago : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('categorie_index') }}" class="btn btn-primary">Retourner à la liste</a>

    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-light"><i class="fa fa-edit"></i> Mettre à jour</a>

    {{ include('admin/categorie/_delete_form.html.twig') }}
{% endblock %}
