{% if is_granted('ROLE_ADMIN') %}
	<form method="post" class="d-inline" action="{{ path('temoignages_delete', {'id': temoignage.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cet élément?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ temoignage.id) }}">
		<button class="btn btn-danger">
			<i class="fa fa-trash"></i>
		</button>
	</form>
{% endif %}
