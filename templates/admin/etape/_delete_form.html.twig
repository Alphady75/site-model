{% if is_granted('ROLE_ADMIN') %}
	<form method="post" action="{{ path('admin_etape_delete', {'id': etape.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cet élément?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etape.id) }}">
		<button class="btn btn-danger">
			<i class="fa fa-trash"></i>
			Supprimer</button>
	</form>
{% endif %}
