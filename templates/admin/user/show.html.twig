{% extends 'admin.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>#ID</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('user_index') }}" class="btn btn-primary">Retourner à la liste</a>

	<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-light border">
		<i class="fa fa-edit"></i>
		Mettre à jour</a>

	{{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
