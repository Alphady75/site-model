{% if is_granted('ROLE_ADMIN') %}
	<form method="post" action="{{ path('apropos_delete', {'id': apropo.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cet élément?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ apropo.id) }}">
		<button class="btn btn-danger">
			<i class="fa fa-trash"></i>
		</button>
	</form>
{% endif %}
