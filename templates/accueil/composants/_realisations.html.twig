<!-- Projects Start -->
<div class="container py-6 pb-1" id="project">
	<div class="row mb-5 align-items-start wow fadeInUp" data-wow-delay="0.1s">
		<div class="col-md-6">
			<h1 class="display-5 center-sm mb-3 text-start">{{ 'derniersprojets'|trans }}</h1>
		</div>
		<div class="col-md-6">
			<div class="text-end center-sm wow fadeInUp" data-wow-delay="0.3s">
				<a href="{{ path('realisations') }}" class="btn btn-dark py-3">{{ 'toutafficher'|trans }}&longrightarrow;</a>
			</div>
		</div>
	</div>
	<div class="row portfolio-container wow fadeInUp" data-wow-delay="0.1s">
