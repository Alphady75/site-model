{% extends 'espace.html.twig' %}

{% block title %}
	Informations actionnairelles
{% endblock %}
{% block col %}7{% endblock %}
{% block titre %}Informations actionnairelles
{% endblock %}
{% block titreCol %}12{% endblock %}

{% block body %}

	{{ form_start(form) }}
	<div class="row">
		<div class="col-sm-6">
			{{ form_row(form.prenom) }}
		</div>
		<div class="col-sm-6">
			{{ form_row(form.nom) }}
		</div>
	</div>
	{{ form_row(form.email) }}
	<div class="input-group flex-nowrap radius phone-input">
		<span class="input-group-text bg-transparent border-0 pays" id="addon-wrapping">
			{{ form_widget(form.pays) }}
		</span>
		{{ form_widget(form.telephone) }}
	</div>
	{{ form_errors(form.telephone) }}
	<div class="pt-4">
		{{ form_rest(form) }}
	</div>
	<div class="text-center pt-4">
		<button type="submit" class="theme-btn btn-style-one radius-btn">
			<span class="btn-title">
				{{ button_label|default('Mettre Ã  jour') }}
			</span>
		</button>
	</div>
	{{ form_end(form) }}

{% endblock %}
